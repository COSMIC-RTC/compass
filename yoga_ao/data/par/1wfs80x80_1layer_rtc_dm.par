/*
atmosphere inits
*/
y_atmos.r0           = 0.16;
y_atmos.nscreens     = 1;
y_atmos.frac         = &([1.0]);
y_atmos.alt          = &([0.0]);
y_atmos.windspeed    = &([20.]);
y_atmos.winddir      = &([45]);

/*
target inits
*/
y_target.ntargets = 1;
y_target.xpos     = &([0.0f]);
