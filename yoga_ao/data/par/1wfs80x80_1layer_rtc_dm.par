y_target.mag      = &([10.]);

/*
loop inits
*/
y_loop.niter  = 1000;
y_loop.ittime = 1/500.0f;

/*
wfs inits
*/
y_wfs                  = array(wfs_struct(),1); // clean start
y_wfs(1).type          = "sh";
y_wfs(1).nxsub         = 80;
y_wfs(1).npix          = 8;
y_wfs(1).pixsize       = 0.3;
y_wfs(1).fracsub       = 0.8;
